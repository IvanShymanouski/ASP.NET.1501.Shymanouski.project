@{
    ViewBag.Title = "EditTask";
}
@model TaskManager.Models.TaskModel

@section navigation{
    @Html.ActionLink("Back", "EditTask", "TaskEditor", null, new { style = "margin-right : 20px"})
    @Html.Partial("_Navigation")
} 

@using (Html.BeginForm("EditTask","TaskEditor",FormMethod.Post)) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    <fieldset style="display : inline">
        <legend>Enter task below</legend>
           @Html.TextBoxFor(m => m.Guid, new { hidden = "hidden"})
        <p>
           @Html.LabelFor(m => m.Title)<br>
           @Html.TextBoxFor(m => m.Title)
        </p>
        <p>
           @Html.LabelFor(m => m.Description)<br>
           @Html.TextAreaFor(m => m.Description)
        </p>
        <input type="submit" value="Edit" />
    </fieldset>
}